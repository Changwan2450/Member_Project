<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.member_project.mapper.MemberMapper">

    <insert id="insertMember">
        INSERT INTO MEMBER (id, pw, name, age, regdate)
        VALUES (#{id}, #{pw}, #{name}, #{age}, SYSDATE)
    </insert>

    <select id="loginMember" resultType="com.kh.member_project.domain.Member">
        SELECT *
        FROM MEMBER
        WHERE id = #{id}
          AND pw = #{pw}
    </select>

    <select id="getMemberList" resultType="com.kh.member_project.domain.Member">
        SELECT *
        FROM MEMBER
        ORDER BY regdate DESC
    </select>

    <delete id="deleteMember">
        DELETE
        FROM MEMBER
        WHERE id = #{id}
    </delete>

    <select id="read" resultType="com.kh.member_project.domain.Member">
        SELECT *
        FROM MEMBER
        WHERE id = #{id}
    </select>

    <update id="updateMember">
        UPDATE MEMBER
        <set>
            <if test="pw != null and pw != ''">pw = #{pw},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="age != null">age = #{age},</if>
            <if test="auth != null and auth != ''">auth = #{auth}</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>